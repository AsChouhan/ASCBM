<apex:page controller="paginationController">   
    <apex:form >
        <apex:pageBlock >
            <apex:pageBlockSection >
                <apex:selectList value="{!str}" size="1" onchange="bhawani()" >
                    <apex:selectOptions value="{!option}" />
                </apex:selectList>                
            </apex:pageBlockSection>
            <apex:actionFunction reRender="enam" action="{!recordStore}" name="bhawani"/>
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!act}" var="tem" id="enam">
                    <apex:column value="{!tem.name}"/>
                    <apex:column value="{!tem.rating}"/>
                    <apex:column value="{!tem.industry}"/>
                    <apex:column value="{!tem.id}"/>
                    <apex:inlineEditSupport />
                </apex:pageBlockTable>
            </apex:pageBlockSection>
            <apex:pageBlockButtons >
                
                <apex:commandButton action="{!save}" value="save" rerender="enam" status="pageStatus" />
                <apex:commandButton action="{!quick}" value="Quick save"/>
                <apex:actionStatus id="pageStatus">	
                    <apex:facet name="start">
                        <apex:outputPanel >
                            <img src="/img/loading32.gif" width="25" height="25" />
                            <apex:outputLabel value="Loading..."/>
                        </apex:outputPanel>            
                    </apex:facet>
                </apex:actionStatus>
            </apex:pageBlockButtons>
        </apex:pageBlock>
    </apex:form>    
</apex:page>